<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO"> <!-- debug < info < warn < error < fatal -->

    <Appenders>

        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>

        <!-- File output -->
        <File name="FileLogger" fileName="/Users/hariprajaa.b/Desktop/amazon_logs.log" append="True">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/> 
        </File>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>

</Configuration>
